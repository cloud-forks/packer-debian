{
  "builders": [
    {
      "type": "qemu",
      "headless": true,
      "vm_name": "packer-debian-7.x-x86_32",
      "iso_url": "http://cdimage.debian.org/cdimage/release/7.5.0/i386/iso-dvd/debian-7.5.0-i386-DVD-1.iso",
      "iso_checksum": "7264bb57c183e40723f3aa865d18050c8e79a45f",
      "iso_checksum_type": "sha1",
      "ssh_username": "root",
      "ssh_password": "build",
      "accelerator": "kvm",
      "ssh_wait_timeout": "10000s",
      "http_directory": "http",
      "shutdown_command": "shutdown -h now",
      "disk_size": 5000,
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "format": "raw",
      "output_directory": "7.x-x86_32",
      "boot_wait": "10s",
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg <wait>",
        "debian-installer=en_US <wait>",
        "auto <wait>",
        "locale=en_US <wait>",
        "kbd-chooser/method=us <wait>",
        "fb=false <wait>",
        "netcfg/get_hostname=build <wait>",
        "netcfg/get_domain=clodo.ru <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/cleanup.sh"
      ]
    }
  ]
}

